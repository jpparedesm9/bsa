<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="@dimen/digit_pin_view_width"
    android:layout_height="48dp"
    android:layout_margin="@dimen/digit_pin_view_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <ImageView android:id="@+id/image"
        android:layout_width="@dimen/digit_pin_view_size"
        android:layout_height="@dimen/digit_pin_view_size"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/bg_pin_digit_off"
        android:scaleType="center"
        android:padding="@dimen/digit_pin_view_padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

</LinearLayout>