<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.solicitationAproved.AprovedFragment"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/infobar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/exitImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@color/transparent"
                android:src="@drawable/ic_clear_black_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/secondaryText"
                android:gravity="center"
                android:textSize="18dp"
                android:text="Solicitar dispersión"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_check_black_24dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:layout_gravity="center"
        android:text="Su solicitud se realizó\nexitosamente"
        android:layout_margin="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        android:textAlignment="center"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="Tu dinero estara disponible en tu cuenta en aproximadamente 30 minutos"/>

    <Button
        android:id="@+id/button_acept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_accept"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textColor="@color/white_transparent"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"/>


</LinearLayout>