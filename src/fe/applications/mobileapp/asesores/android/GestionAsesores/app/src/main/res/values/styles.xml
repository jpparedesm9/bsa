<resources>
    <style name="ButtonColor" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/colorButton</item>
    </style>

    <style name="BorderlessButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorButton</item>
    </style>

    <style name="PinButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Form" />

    <style name="Form.Container" parent="@style/CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">8dp</item>
    </style>

    <style name="Form.FieldReadOnly">
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="Form.Error" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/md_red_500</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="Form.Hint">
        <item name="android:layout_marginStart">@dimen/spinner_hint_margin_start</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="Form.Value">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">inherit</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:background">?editTextBackground</item>
    </style>

    <style name="DialogButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorButton</item>
    </style>

    <style name="PinView">
        <item name="android:buttonStyle">@style/PinView.Button</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="PinView.Button" parent="@style/PinButtonStyle">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
