<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <include layout="@layout/layout_error"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_monthly_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.cobis.gestionasesores.widgets.currencyfield.CurrencyInputEditText
                android:id="@+id/input_monthly_income"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/customer_payment_hint_monthly_income"
                android:inputType="numberDecimal"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_monthly_business_expenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.cobis.gestionasesores.widgets.currencyfield.CurrencyInputEditText
                android:id="@+id/input_monthly_business_expenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/customer_payment_hint_monthly_business_expenses"
                android:inputType="numberDecimal"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_monthly_family_expenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.cobis.gestionasesores.widgets.currencyfield.CurrencyInputEditText
                android:id="@+id/input_monthly_family_expenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/customer_payment_hint_monthly_family_expenses"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_other_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.cobis.gestionasesores.widgets.currencyfield.CurrencyInputEditText
                android:id="@+id/input_other_income"
                style="@style/Form.FieldReadOnly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/customer_payment_hint_other_income"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_payment_capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.cobis.gestionasesores.widgets.currencyfield.CurrencyInputEditText
                android:id="@+id/input_payment_capacity"
                style="@style/Form.FieldReadOnly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/customer_payment_hint_payment_capacity"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</ScrollView>