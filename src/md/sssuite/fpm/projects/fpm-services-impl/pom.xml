<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.cobiscorp.ecobis.fpm</groupId>
		<artifactId>fpm-parent</artifactId>
		<version>4.3.0.0</version>
		<relativePath>../fpm-parent</relativePath>
	</parent>

	<artifactId>fpm-services-impl</artifactId>
	<packaging>jar</packaging>	
	<name>fpm-services-impl</name>
	<url>http://www.cobiscorp.com/</url>

	<build>
		<resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>openjpa-maven-plugin</artifactId>
				<version>1.2</version>
				<configuration>
					<includes>**/model/*.class</includes>
					<!--<addDefaultConstructor>true</addDefaultConstructor> -->
					<!--<enforcePropertyRestrictions>true</enforcePropertyRestrictions> -->
				</configuration>
				<dependencies>
					<dependency>
						<groupId>org.apache.openjpa</groupId>
						<artifactId>openjpa</artifactId>
						<version>2.1.1</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>com.springsource.bundlor</groupId>
				<artifactId>com.springsource.bundlor.maven</artifactId>
				<version>1.0.0.RELEASE</version>
				<executions>
					<execution>
						<id>bundlor</id>
						<goals>
							<goal>bundlor</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifestFile>${project.basedir}/target/classes/META-INF/MANIFEST.MF</manifestFile>
						<addMavenDescriptor>false</addMavenDescriptor>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jarsigner-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

	<properties>
           <jpa.dbType>sybase</jpa.dbType>
           <databaseName>SYBASE</databaseName>
	</properties>

	<profiles>
       <profile>
           <id>SQLServer</id>
           <properties>
              <databaseName>SYBASE</databaseName>
              <jpa.dbType>sqlserver</jpa.dbType>
           </properties>
       </profile>
    </profiles>


