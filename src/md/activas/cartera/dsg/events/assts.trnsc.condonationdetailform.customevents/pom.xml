<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.cobiscorp.cobis</groupId>
		<artifactId>cobis-app-parent</artifactId>
		<version>1.0.0</version>
	</parent>

	<groupId>com.cobiscorp.cobis</groupId>
	<artifactId>assts.trnsc.condonationdetailform.customevents</artifactId>
	<version>1.0.0</version>
	<packaging>jar</packaging>

	<url>http://cobiscorp.com</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<pmd.fail.on.violation>false</pmd.fail.on.violation> <findbugs.fail.on.violation>false</findbugs.fail.on.violation>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-scr-plugin</artifactId>
				<version>1.7.2</version>
				<configuration>
					<specVersion>1.1</specVersion>
				</configuration>
				<executions>
					<execution>
						<id>generate-scr-scrdescriptor</id>
						<goals>
							<goal>scr</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.5</version>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>target/classes</outputDirectory>
							<resources>
								<resource>
									<directory>target/scr-plugin-generated</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.springsource.bundlor</groupId>
				<artifactId>com.springsource.bundlor.maven</artifactId>
				<version>1.0.0.RELEASE</version>
				<executions>
					<execution>
						<id>bundlor</id>
						<goals>
							<goal>bundlor</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifestFile>${project.build.directory}/classes/META-INF/MANIFEST.MF</manifestFile>
						<addMavenDescriptor>false</addMavenDescriptor>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jarsigner-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>com.cobiscorp.cobis.cts.maven-plugins</groupId>
				<artifactId>cts-maven-deployer-plugin</artifactId>
				<version>1.0.0</version>
				<configuration>
					<skip>true</skip>
					<qmIp>localhost</qmIp>
					<qmPort>1926</qmPort>
					<qmChannel>CLIENTES_MF</qmChannel>
					<qManager>QM.BROKER01</qManager>
					<fileLocation>../plugins/framework/designer-example</fileLocation>
					<ctsPluginName>cobis-designer-app-example</ctsPluginName>
					<planId>designer-example</planId>
				</configuration>
				<executions>
					<execution>
						<id>cts-deploy</id>
						<goals>
							<goal>install</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>jaxen</groupId>
						<artifactId>jaxen</artifactId>
						<version>1.1.1</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings 
					only. It has no influence on the Maven build itself. -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											com.springsource.bundlor
										</groupId>
										<artifactId>
											com.springsource.bundlor.maven
										</artifactId>
										<versionRange>
											[1.0.0.RELEASE,)
										</versionRange>
										<goals>
											<goal>bundlor</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.apache.felix
										</groupId>
										<artifactId>
											maven-scr-plugin
										</artifactId>
										<versionRange>
											[1.7.2,)
										</versionRange>
										<goals>
											<goal>scr</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.apache.felix</groupId>
			<artifactId>org.apache.felix.scr.annotations</artifactId>
			<version>1.6.0</version>
		</dependency>
		<dependency>
			<groupId>org.glassfish.jersey.containers</groupId>
			<artifactId>jersey-container-servlet</artifactId>
			<version>2.5.1</version>
		</dependency>
		<dependency>
			<groupId>org.glassfish.jersey.media</groupId>
			<artifactId>jersey-media-json-jackson</artifactId>
			<version>2.5.1</version>
		</dependency>
		<dependency>
			<groupId>com.cobiscorp.cobis</groupId>
			<artifactId>cobis-commons</artifactId>
			<version>1.0.2.9.8</version>
		</dependency>
		<dependency>
			<groupId>com.cobiscorp.cobis</groupId>
			<artifactId>cobis-plugin-activator</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>com.cobiscorp.cobis.cts</groupId>
			<artifactId>cts-commons</artifactId>
			<version>1.0.7.9</version>
		</dependency>
		<dependency>
			<groupId>com.cobiscorp.cobis</groupId>
			<artifactId>cobis-osgi-jaxrs-connector</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>com.cobiscorp.cobis.cts</groupId>
			<artifactId>cts-service-integration</artifactId>
			<version>1.0.3</version>
		</dependency>
		<dependency>
			<groupId>com.cobiscorp.cobis.cts</groupId>
			<artifactId>cts-admin-services</artifactId>
			<version>1.0.3</version>
		</dependency>
		<dependency>
			<groupId>com.cobiscorp.designer</groupId>
			<artifactId>cobis-designer-api</artifactId>
			<version>1.0.2</version>
		</dependency>
		<dependency>
			<groupId>com.cobiscorp.cloud.assets.api</groupId>
			<artifactId>COBISCorp.eCOBIS.Assets.Cloud.Service</artifactId>
			<version>2.0.0.0</version>
		</dependency>
		<dependency>
			<groupId>com.cobiscorp.cloud.assets.api</groupId>
			<artifactId>COBISCorp.eCOBIS.Assets.Cloud.DTO</artifactId>
			<version>2.0.0.0</version>
		</dependency>
		<dependency>
			<groupId>com.cobiscorp.cobis</groupId>
			<artifactId>assts.domains</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>com.cobiscorp.cobis</groupId>
			<artifactId>assts.commons.events</artifactId>
			<version>1.0.0</version>
		</dependency>
	</dependencies>
</project>
